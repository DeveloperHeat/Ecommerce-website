  <body onload="setup()">
    <nav>
      <input type="checkbox" id="check" />
      <label for="check" class="checkbtn">
        <i class="bx bx-menu" style="color: white"></i>
      </label>
      <label class="logo">SwiftDrop</label>
      <ul>
        <li><a href="/" class="active">Home</a></li>
        <li><a href="/productLists">Products</a></li>
        <li><a href="#">Cart</a></li>
        <!-- Display "Logout" if the user is logged in -->
        <% if (user) { %>
        <li><a href="/user/<%= user.uid %>">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
        <% } else { %>
        <!-- Display "Login" if the user is not logged in -->
        <li><a href="/login">Login</a></li>
        <% } %>
      </ul>
    </nav>
    <section class="home">
      <span class="home-content">
