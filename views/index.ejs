      <h2 class="heading">
        Have Questions? <span class="us">Contact Us</span>
      </h2>
      <form
        action="https://formsubmit.co/your@email.com"
        method="POST"
        id="contactForm"
      >
        <span class="input-box">
          <input type="text" placeholder="Full Name" id="inOne" />
          <br />
          <br />
          <input type="text" placeholder="Email Address" id="inTwo" />
        </span>
        <br />
        <br />
        <textarea
          name=""
          id="mes"
          cols="30"
          row="10"
          placeholder="Your Message"
        ></textarea>
        <input
          type="submit"
          value="Send Message"
          class="btn"
          onclick="sendMail()"
        />
      </form>
    </section>
    <script src="js/contact.js"></script>
    <script type="module" src="js/script.js"></script>
    <script type="module" src="js/logout.js"></script>
